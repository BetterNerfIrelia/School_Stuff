<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>Index</servlet-name>
        <jsp-file>index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Bilder</servlet-name>
        <jsp-file>bilder.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Bilder</servlet-name>
        <url-pattern>/bilder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Registrieren</servlet-name>
        <jsp-file>registrieren.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registrieren</servlet-name>
        <url-pattern>/registrieren</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Softwareentwicklung</servlet-name>
        <jsp-file>softwareentwicklung.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Softwareentwicklung</servlet-name>
        <url-pattern>/softwareentwicklung</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Softwaresicherheit</servlet-name>
        <jsp-file>softwaresicherheit.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Softwaresicherheit</servlet-name>
        <url-pattern>/softwaresicherheit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Tabellen</servlet-name>
        <jsp-file>tabellen.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Tabellen</servlet-name>
        <url-pattern>/tabellen</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Webapplikationen</servlet-name>
        <jsp-file>webapplikationen.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Webapplikationen</servlet-name>
        <url-pattern>/webapplikationen</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Guestbook</servlet-name>
        <jsp-file>guestbook.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Guestbook</servlet-name>
        <url-pattern>/guestbook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NewEntry</servlet-name>
        <jsp-file>entry.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewEntry</servlet-name>
        <url-pattern>/neuerEintrag</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>EntryServlet</servlet-name>
    <servlet-class>at.fhv.ssc.servlets.EntryServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>EntryServlet</servlet-name>
        <url-pattern>/entryServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CookieServlet</servlet-name>
        <servlet-class>at.fhv.ssc.servlets.CookieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CookieServlet</servlet-name>
        <url-pattern>/cookieServlet</url-pattern>
    </servlet-mapping>

</web-app>